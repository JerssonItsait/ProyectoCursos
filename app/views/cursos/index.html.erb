<%- model_class = Curso -%>
<div class="page-header">
  <h1><center>Cursos</center></h1>
  <%= form_tag request.path, :method => 'get' do %>
  <%= content_tag :label do %>
  <span class="label label-inverse">Nombre de Curso:</span>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Consultar", :class => 'btn btn-inverse', :name => nil %>
  <% end %>
  <% end %>
</div>
<table class="table table-hover table-bordered table-condensed">
  <thead>
    <tr>
      <th>Id</th>
       <th>Ficha</th>
      <th>Nombre</th>
      <th>Acciones</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @cursos %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'Nuevo Curso', new_curso_path, :class => 'btn btn-success', :remote => true %></td>
    </tr>
  </tfoot>
</table>
<br />
<br />
<div align="center">
<%= will_paginate @cursos, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %>
</div>
<p>
<em>Total Cursos : </em><%= @cursos.total_entries %>
</p>