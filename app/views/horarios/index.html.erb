<%- model_class = Horario -%>

<div class="page-header"><p class="text-success">
  <h1><center><p class="text-success">HORARIOS</p></center></h1>
  <%= form_tag request.path, :method => 'get' do %>
  <%= content_tag :label do %>
  <%= image_tag('search2.png', :alt => '', :class => "img-circle" ) %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Consultar", :class => 'btn btn-inverse', :name => nil %>
  <% end %>
  <% end %>
</div>
<table class="table table-hover table-bordered table-condensed">
  <thead>
    <tr>
      <th>Id</th>
      <th>Dia</th>
      <th>Hora</th>
      <th>Aula</th>
      <th>Materia</th>
      <th>Instructor</th>
      <th>Curso</th> 
      <th>Acciones</th>     
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @horarios %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'Nuevos Horarios', new_horario_path, :class => 'btn btn-success', :remote => true %></td>
    </tr>
  </tfoot>
</table>
<br />
<br />
<div align="center">
<%= will_paginate @horarios, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %>
</div>
<p>
<em>Total Horarios Programados : </em><%= @horarios.total_entries %>
</p>
