<%- model_class = Instructor -%>
<div class="page-header">
  <h1><center><p class="text-success">INSTRUCTORES</p></center></h1>
  <%= form_tag request.path, :method => 'get' do %>
  <%= content_tag :label do %>
  <%= image_tag('search2.png', :alt => '', :class => "img-circle" ) %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Consultar", :class => 'btn btn-inverse', :name => nil %>
  <% end %>
  <% end %>
</div>
<table class="table table-hover table-bordered table-condensed">
  <thead>
    <tr>
      <th>id</th>
      <th>nombres</th>
      <th>cedula</th>
      <th>email</th>
      <th>direccion</th>
      <th>telefono</th>
      <th>fch_nacimiento</th>
      <th>acciones</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @instructores %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'Nuevo Instructor', new_instructor_path, :class => 'btn btn-success', :remote => true %></td>
    </tr>
  </tfoot>
</table>
<br />
<br />
<div align="center">
<%= will_paginate @instructores, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %>
</div>
<p>
<em>Total Instructores : </em><%= @instructores.total_entries %>
</p>
